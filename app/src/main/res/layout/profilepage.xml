<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"> <!-- Semi-transparent background -->

    <!-- Outer Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_complaint_card">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <TextView
                style="@style/TitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#FFF"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_centerVertical="true" />

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background"
                android:backgroundTint="#4A4A4C"
                android:contentDescription="Close"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_rounded"
            app:cardBackgroundColor="#3A3A3C"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/hiusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi Vishnu!"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:layout_gravity="start" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="60dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/iv_profile_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/defaultprofile" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Vishnu Teja"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Details Grid -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#3A3A3C">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <GridLayout
                            android:id="@+id/grid_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:columnCount="2"
                            android:rowCount="2">

                            <!-- DOB -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/dateofbirth" /> <!-- Replace with your DOB icon -->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_dob"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="DD/MM/YYYY"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date of Birth"
                                        android:textColor="#AEAEB2"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- City -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/city" /> <!-- Replace with your City icon -->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_city"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chennai"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="City"
                                        android:textColor="#AEAEB2"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Reports -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/reportsubmitted" /> <!-- Replace with your Reports icon -->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_reports_submitted"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="23"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Reports Submitted"
                                        android:textColor="#AEAEB2"
                                        android:textSize="13sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Occupation -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="1"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/occupation" /> <!-- Replace with your Occupation icon -->

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:id="@+id/tv_occupation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Student"
                                        android:textColor="#FFFFFF"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Occupation"
                                        android:textColor="#AEAEB2"
                                        android:textSize="14sp" />
                                </LinearLayout>
                            </LinearLayout>

                        </GridLayout>


                        <!-- Divider View -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="22dp"
                            android:layout_marginBottom="17dp"
                            android:background="@drawable/bordersprofile" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <!-- Honour Score Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_honour_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Honour Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"> <!-- This centers child views horizontally -->

                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Honour Score"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        </LinearLayout>



                        <!-- Progress Arc Gauge -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <com.SIMATS.smartcity.ArcGaugeView
                                android:id="@+id/arcGauge"
                                android:layout_width="170dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true"/>
                        </RelativeLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:text="This score shows how active and responsible\nyou are in reporting local issues"
                            android:textColor="#AEAEB2"
                            android:textSize="12sp"
                            android:textAlignment="center" />

                        <!-- Buttons -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/btn_edit_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:textColor="#007AFF"
                                android:textSize="18sp"
                                android:layout_alignParentStart="true" />

                            <TextView
                                android:id="@+id/btn_score_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Score Details"
                                android:textColor="#007AFF"
                                android:textSize="18sp"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
