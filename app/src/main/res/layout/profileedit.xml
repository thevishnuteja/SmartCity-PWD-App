<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:fitsSystemWindows="true"> <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    android:fillViewport="true"
    android:background="@drawable/bg_complaint_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Profile Edit"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold" />
            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_background"
                android:backgroundTint="#4A4A4C"
                android:contentDescription="Close"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_pic_card"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp">
                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Profile Picture"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profileedit" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignEnd="@id/profile_pic_card"
                android:layout_alignBottom="@id/profile_pic_card"
                android:background="@drawable/circle_background"
                android:elevation="5dp"
                android:padding="6dp"
                android:src="@drawable/pencil" />

            <Button
                android:id="@+id/btn_change_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic_card"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:text="Change Picture"
                android:textColor="#2196F3"
                android:textSize="14sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_profile"
            android:hint="User Name"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#212121"
            android:textColorHint="#666666"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_of_birth"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:hint="Date of Birth"
            android:background="@drawable/bg_edittext_profile"
            android:inputType="datetime"
            android:padding="16dp"
            android:textColor="#212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_profile"
            android:hint="City"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#212121"
            android:textColorHint="#666666"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/occupation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_profile"
            android:hint="Occupation"
            android:inputType="text"
            android:padding="16dp"
            android:textColor="#212121"
            android:textColorHint="#666666"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edittext_profile"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="16dp"
            android:textColor="#212121"
            android:textColorHint="#666666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_updateprofile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_button_blue"
            android:text="Update Profile"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="By changing your profile, you agree to the app's Privacy Policy and Terms of Service."
            android:textColor="#9E9E9E"
            android:textSize="10sp" />

    </LinearLayout>
</ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>