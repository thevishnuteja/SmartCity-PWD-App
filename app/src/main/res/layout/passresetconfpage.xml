<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/loginpagebg"
    tools:context=".actpassresetconf"
    android:padding="24dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"
        android:text="Smart City - PWD Neighborhood"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/check_icon"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginBottom="30dp"
    app:lottie_rawRes="@raw/mailbox"
    app:lottie_autoPlay="true"
    app:lottie_loop="true" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Password reset link sent"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sub_message"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginBottom="50dp"
        android:text="check your Registered E-mail"
        android:textColor="#CCCCCC"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_login"
        android:layout_width="250dp"
        android:layout_height="66dp"
        android:backgroundTint="#2E6BF6"
        android:text="Go to Login Page"
        android:textColor="#FFFFFF"
        app:cornerRadius="30dp" />/>
</LinearLayout>
